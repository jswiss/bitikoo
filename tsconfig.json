{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": ["es6"],
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "esnext",
		"typeRoots": ["node_modules/@types"]
	},
	"exclude": ["node_modules", "e2e", "*.js"]
}
